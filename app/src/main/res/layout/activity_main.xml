<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCalculator">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/result"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp" />

    <TableRow>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="1"
            android:id="@+id/one"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="2"
            android:id="@+id/two"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="3"
            android:id="@+id/three"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="+"
            android:id="@+id/add"
            android:layout_marginBottom="20dp"/>
    </TableRow>

    <TableRow>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="4"
            android:id="@+id/four"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="5"
            android:id="@+id/five"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="6"
            android:id="@+id/six"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="-"
            android:id="@+id/subtract"
            android:layout_marginBottom="20dp"/>
    </TableRow>

    <TableRow>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="7"
            android:id="@+id/seven"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="8"
            android:id="@+id/eight"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="9"
            android:id="@+id/nine"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="*"
            android:id="@+id/multiply"
            android:layout_marginBottom="20dp"/>
    </TableRow>

    <TableRow>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="0"
            android:id="@+id/zero"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="."
            android:id="@+id/dot"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="="
            android:id="@+id/equal"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="/"
            android:id="@+id/divide"
            android:layout_marginBottom="20dp"/>
    </TableRow>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WebView 실행"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:onClick="onClick_webView"/>

</TableLayout>